#include<stdio.h>
int main()
{
    float r;
    printf("enter the radius of circle");
    scanf("%f",&r);
    float area,per;
    area=3.14*r*r;
    per=2*3.14*r;
    printf("area of circle is %.2f\n",area);
    printf("perimeter of circle is %.2f\n",per);
    float as, ar,ps,pr,s,l,b;
   printf("enter side of square,length and breadth of rectangle");
    scanf("%f%f%f",&s,&l,&b);
    as=s*s;
    ps=4*s;
    ar=l*b;
    pr=2*(l+b); 
    printf("area and perimeter of square is %.2f and %.2f,as,ps");
    printf("area and perimeter of rectangle is %.2f and %.2f\n",ar,pr);
    return 0;
}     

